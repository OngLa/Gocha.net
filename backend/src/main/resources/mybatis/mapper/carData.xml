    <!--  CarId 기반으로 모든 자동차 데이터 불러오기  -->
    <select id="findAllCarDataByCarId" resultType="carData">
        SELECT ID,
               CAN_GO_DISTANCE,
               DISTANCE,
               CAR_BATTERY,
               BATTERY_CHARGE,
               BREAK_OIL,
               ENGINE_OIL,
               OIL,
               TIRE,
               WASHER,
               LAMP_WIRE,
               LAST_UPDATE,
               CAR_ID
        FROM CAR_DATA
        WHERE CAR_ID = #{carId}
